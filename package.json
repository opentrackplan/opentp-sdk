{
  "name": "@opentp/sdk",
  "version": "0.1.0",
  "description": "Runtime SDK for OpenTrackPlan â€” send typed analytics events to GA4, Snowplow, and more",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ga4": {
      "types": "./dist/ga4.d.ts",
      "import": "./dist/ga4.js",
      "require": "./dist/ga4.cjs"
    },
    "./snowplow": {
      "types": "./dist/snowplow.d.ts",
      "import": "./dist/snowplow.js",
      "require": "./dist/snowplow.cjs"
    },
    "./amplitude": {
      "types": "./dist/amplitude.d.ts",
      "import": "./dist/amplitude.js",
      "require": "./dist/amplitude.cjs"
    },
    "./debug": {
      "types": "./dist/debug.d.ts",
      "import": "./dist/debug.js",
      "require": "./dist/debug.cjs"
    }
  },
  "files": ["dist/", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "tsup": "^8.0.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {},
  "license": "Apache-2.0"
}
